<!DOCTYPE html>
<html>
  <head>
    <title>AlbumReviews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class ="top-bar">
      <a class="logo" href="/">AlbumRecords</a>
      <div class="img">
        <%= image_tag "https://plus.maths.org/issue32/outerspace/istock_lp.jpg" %>
      </div>

          <ul class="top-bar-section">
            <% if user_signed_in? %>
              <li><%= link_to 'Add Album', new_album_path %></li>
              <li><%= link_to 'Sign Out', destroy_user_session_path, :method   => :delete %></li>
              <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
              <% if current_user.admin? %>
                <p>(signed in as Admin)</p>
                <li><%= link_to "Users", admin_users_path	 %></li>
                <li><%= link_to "Albums", admin_albums_path %></li>
              <% end %>
            <% else %>
              <li><%= link_to 'Sign In', new_user_session_path %></li>
              <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>
          </ul>
      </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
