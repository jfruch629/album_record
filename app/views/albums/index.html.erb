<div class="search">
  <li><%= form_tag(albums_path, :method => "get", id: "album-search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Enter Album Info" %>
    <%= submit_tag "Search Albums", :name => nil, id: 'search-button' %><% end %>
  </li>
</div>

<div class="album-section">
  <div class="albums">
    <div class="album-list-header">
      <li>Albums</li>
      <hr>
      <% if @albums.blank? %>
        <h4>There is no album containing the term <%= params[:search] %>.</h4>
        <%= link_to 'Back', root_path, id: 'back-link'%>
      <% end %>
    </div>

    <ul>
      <% @albums.each do |album| %>
        <div class="album">
          <li><%= link_to album.title, album, id: album.title %></li>
        </div>
      <% end %>
    </ul>
  </div>
</div>
