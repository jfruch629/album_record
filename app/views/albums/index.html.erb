<div class="album">
 <h1>All Albums</h1>
 <hr>

 <% if @albums.blank? %>
  <h4>There is no album containing the term <%= params[:search] %>.</h4>
  <%= link_to 'Back', root_path, id: 'back-link'%>
<% end %>

 <table>
   <thead>
     <tr>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @albums.each do |album| %>
       <tr>
         <td><%= link_to album.title, album, id: album.title %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
</div>
<%= link_to 'Back', root_path, id: 'back-link'%>
