 <%= form_with(model: album, local: true) do |f| %>
   <% if album.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>
       <ul>
         <% album.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     <% end %>
   </div>
   <div class="field">
     <%= f.label :title %><br />
     <%= f.text_field :title, id: :album_title %>
   </div>
   <br />
   <div class="field">
     <%= f.label :artist %><br />
     <%= f.text_field :artist, id: :album_artist %><br />
   </div><br />

   <div class="field">
     <%= f.label :summary %><br />
     <%= f.text_field :summary, id: :album_summary %>
   </div>
   <br />
   <div class="field">
     <%= f.label :release_year %><br />
     <%= f.text_field :release_year, id: :album_release_year %>
   </div>
   <br />
   <div class="field">
     <%= f.label :genre %><br />
     <%= f.text_field :genre, id: :album_genre %>
   </div>
   <br />
   <div class="field">
     <%= f.label :track %><br />
       <% 25.times do %>
        <%= f.text_field :tracks, multiple: true, id: "album[tracks][]" %>
     <% end %>
   </div>
   <br />
   <div class="actions">
     <%= f.submit "Save"  %>
   </div>
 <% end %>
