<div class="albums">
  <ul class="album-list-header">
    <li><h1>Albums</h1></li>
    </li><%= form_tag(albums_path, :method => "get", id: "album-search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Enter Album Info" %>
    <%= submit_tag "Search Albums", :name => nil %><% end %></li>
    <hr>
  </ul>

 <table>
   <thead>
     <tr>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @albums.each do |album| %>
       <tr>
         <td><%= link_to album.title, admin_album_path(album), id: album.title %> |
              <%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' }, id: 'delete' %> </td>
       </tr>
     <% end %>
   </tbody>
 </table>
</div>
